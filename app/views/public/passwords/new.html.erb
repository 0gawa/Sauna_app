<%= render "layouts/header"%>

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-11">

      <h1 class="text-center mt-5">パスワードを忘れても大丈夫です！</h1>
      <p class="text-center">パスワードリセットメールを送信します。</p>

      <%= render "public/shared/error_messages", resource: resource %>
      <%= form_with model: @user, url: user_password_path(@user), method: :post, class:"row mt-5 justify-content-center" do |f| %>

          <div class="field col-md-8 col-10">
            <%= f.label :email , "メールアドレスを入力してください", class: "pb-2"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="actions mt-3 col-md-8 col-10 text-center">
            <%= f.submit "送信", class: "btn btn-primary w-75"  %>
          </div>
      <% end %>

      <div class="row mt-5 ">
        <div class="offset-md-3 col-md-6 col-8 offset-2"><%= render "public/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
