<%= render "layouts/header"%>

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-11">
      <div class="row mt-5">
        <h1 class="text-center">ログイン</h1>
      </div>

      <% if flash[:notice]%>
        <div class="row mt-5 d-flex justify-content-center"> 
          <div class="col-auto">
            <p class = "alert alert-warning"><%= flash[:notice] %></p>
          </div>
        </div>
      <%end%>

      <div class="row mt-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mt-4 col-10 offset-1">
            <%= f.label :email, "メールアドレス", class: "pb-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-4 col-10 offset-1">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-4 offset-1">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "次回から自動でログイン" %>
            </div>
          <% end %>

          <div class="actions mt-4 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary col-4" %>
          </div>
        <% end %>
      </div>

      <div class="mt-4 text-center"><%= render "public/shared/links" %></div>

    </div>
  </div>
</div>