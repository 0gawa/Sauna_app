<%= render "layouts/header"%>

<div class="container">
  <div class="row d-flex justify-content-center">
<!--ログインフォームは中心位置に長方形を配置するレイアウトにすること-->

    <h1 class="text-center mt-5">ログイン</h1>
    <div class="col-11 col-md-5 log-in-box">
      <%= form_with model: @user, url: session_path(@user), method: :post, class:"row justify-content-center" do |f| %>
        <div class="field col-10">
          <%= f.label :email, "メールアドレス", class: "pb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mt-4 col-10">
          <%= f.label :password, "パスワード", class: "pb-1" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-4 col-10">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "次回から自動でログイン" %>
          </div>
        <% end %>


        <div class="actions mt-4 text-center">
          <% if flash[:notice]%>
            <p class="text-center mb-1 text-danger"><%= flash[:notice] %></p>
          <%end%>
          <%= f.submit "ログイン", class: "btn btn-primary col-10" %>
        </div>
        
        <div class="mt-4 col-10">
          <%= render "public/shared/links" %>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <%= button_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-success col-10" %>
      </div>
    </div>

  </div>
</div>