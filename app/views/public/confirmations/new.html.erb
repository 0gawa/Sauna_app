<%= render "layouts/header"%>
<div class="container">
  <div class="row d-flex justify-content-center">
  <!--再送フォームは中心位置に長方形を配置するレイアウトにすること-->
    <div class="col-11 col-md-7 registration-box">
      <h1 class="text-center">メールアドレスを変更する</h1>
      <p class="text-left pt-2">メールアドレスを変更するために、以下のフォームに現在のメールアドレスを入力してください。
      入力されたメールアドレスに変更メールを送信します。</p>

      <%= render "public/shared/error_messages", resource: resource %>
      <%= form_with model: @user, url: confirmation_path(@user), method: :post, class:"row mt-4 justify-content-center"  do |f| %>
        <div class="field mt-4 col-10">
          <%= f.label :email, "メールアドレス", class: "pb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        </div>

        <div class="actions mt-4 text-center">
          <%= f.submit "メールを再送する", class: "btn btn-primary col-5" %>
        </div>
      <% end %>

      <div class="mt-4 text-center"><%= render "public/shared/links" %></div>
    </div>
  </div>
</div>
