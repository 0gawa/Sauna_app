<%= render "layouts/header"%>

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <% if @user.errors.any? %>
                <div class="row mt-5">
                    <h1 class="text-center"><%= @user.errors.count %>件のエラーが発生しました</h1>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li class="fs-5"><%= message %></li>
                        <% end %>
                    </ul>
            <% end %>

            <div class="row mt-5">
                <h1 class="text-center">ユーザー情報の編集</h1>
            </div>

            <div class="row mt-4">
                <%= form_with model: @user, method: :patch do |f| %>
                    <div class="col-6 offset-3">
                        <h4 class="text-center">名前</h4>
                        <%= f.text_field :name, class: "form-control" %>
                    </div>

                    <div class="mt-3 col-6 offset-3">
                        <h4 class="text-center">自己紹介</h4>
                        <%= f.text_area :introduction, placeholder: "自己紹介は120字以内でお願いします。", class: "form-control", :size=>"60x10" %>
                    </div>
                    <div class="mt-3 col-6 offset-3">
                        <h4 class="text-center">ユーザー画像</h4>
                        <%= f.file_field :profile, accept: "image/*", class: "form-control" %>
                    </div>

                    <div class="text-center"><%= f.submit '保存する', class: "btn btn-primary mt-5 col-5" %></div>
                <%end%>
            </div>
        </div>
    </div>
</div>