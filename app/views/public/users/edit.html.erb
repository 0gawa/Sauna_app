<%= render "layouts/header"%>

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <% if @user.errors.any? %>
                <div class="row mt-5">
                    <h1><%= @user.errors.count %>件のエラーが発生しました</h1>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li class="fs-5"><%= message %></li>
                        <% end %>
                    </ul>
            <% end %>

            <div class="row mt-5">
                <h1>ユーザー情報の編集</h1>
            </div>

            <div class="row mt-4">
                <%= form_with model: @user, method: :patch do |f| %>
                    <div class="col-md-5">
                        <h4>名前</h4>
                        <%= f.text_field :name, class: "form-control" %>
                    </div>

                    <div class="mt-3 col-md-5">
                        <h4>自己紹介</h4>
                        <%= f.text_area :introduction, placeholder: "自己紹介は120字以内でお願いします。", class: "form-control", :size=>"60x10" %>
                    </div>

                    <div class="mt-3 col-md-5">
                        <h4>ユーザー画像</h4>
                        <%= f.file_field :profile, accept: "image/*", class: "form-control" %>
                    </div>

                    <%= f.submit '保存する', class: "btn btn-primary mt-5" %>
                <%end%>
            </div>
        </div>
    </div>
</div>