<%= render "layouts/header"%>

<div class="container">
    <div class="row mt-5">
        <h1>ユーザー情報の編集</h1>
    </div>

    <div class="row mt-4">
        <%= form_with model: @user do |f| %>
            <div class="col-md-5">
                <h4>名前</h4>
                <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mt-3 col-md-5">
                <h4>自己紹介</h4>
                <%= f.text_area :introduction, class: "form-control", :size=>"60x10" %>
            </div>

            <%= f.submit '保存する', class: "btn btn-primary mt-3" %>
        <%end%>
    </div>
</div>