<%= render "layouts/header"%>

<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="row mt-5">
        <h1 class="text-center">アカウントの登録</h1>
        <p class="text-center pt-2 pb-0">アカウントに登録すると<%=link_to "プライバシーポリシー", privacy_path, class:""%>と利用規約に同意したとみなします。</p>
      </div>

      <div class="row mt-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field mt-4 col-10 offset-1">
            <%= f.label :email, "メールアドレス", class: "pb-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-4 col-10 offset-1">
            <%= f.label :name, "ニックネーム（他のユーザーにも公開されます）", class: "pb-2" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field mt-4 col-10 offset-1">
            <%= f.label :password, "パスワード", class: "pb-2" %>
            <% if @minimum_password_length %>
            <span>（<%= @minimum_password_length %>文字以上にしてください）</span>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field mt-4 col-10 offset-1">
            <%= f.label :password_confirmation, "確認用", class: "pb-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions mt-4 text-center">
            <%= f.submit "登録", class: "btn btn-primary col-4" %>
          </div>
        <% end %>
      </div>

      <div class="mt-4 text-center"><%= render "public/shared/links"%></div>
    </div>
  </div>
</div>
