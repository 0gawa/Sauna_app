<%=render 'layouts/admin_header'%>

<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
        <div class="row mt-5"><h1 class="text-center">管理者ログイン</h1></div>
        <div class="row mt-2">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-6 offset-3 field mt-5">
              <%= f.label :email, "管理者用メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="col-6 offset-3 field mt-4">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="col-6 offset-3 field mt-4">
              <%= f.label :name, "名前" %><br />
              <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="actions text-center mt-5">
              <%= f.submit "管理者としてログインする", class: "btn btn-primary col-6" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
