<%=render "layouts/admin_header"%>

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <div class="row mt-5">
                <h1>サウナ施設詳細<h1>
            </div>

            <div class="row">
                <div class="col-md-5 mt-5">
                    <h4 >サウナ施設名</h4>
                    <p class="fs-6"><%=@sauna.name%></p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mt-5">
                    <h4 class="">サウナ施設画像<h4>
                    <div class="card mt-1">
                        <%=image_tag @sauna.get_image(900,600), alt: "読み込みエラー"%>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mt-5">
                    <h4>サウナ施設住所</h4>
                    <p class="fs-6"><%=@sauna.address%></p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mt-5">
                    <h4>サウナ施設の説明</h4>
                    <p class="fs-6"><%=simple_format(h(@sauna.express))%></p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <%@sauna.number_saunas.each do |num_sauna| %>
                        <div class="col-md-auto mb-4">
                            <h4><i class="fa-solid fa-fire fa-lg pe-1" style="color: #d32727;"></i>サウナ室の温度
                            <p class="fs-4 mt-2 text-center"><%=num_sauna.sauna_info.temperature%>度</p></h4>
                        </div>
                    <%end%>
                </div>
                <div class="col-md-4">
                    <%@sauna.number_waters.each do |num_water|%>
                        <div class="ms-md-4 col-md-auto">
                            <h4><i class="fa-solid fa-droplet fa-lg pe-1" style="color: #200cb6;"></i>水風呂の温度
                            <p class="fs-4 mt-3 text-center"><%=num_water.water.temperature%>度</p></h4>
                        </div>
                    <%end%>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-auto">
                    <%=button_to "削除する", admin_sauna_path(@sauna.id), method: :delete, data: { turbo_confirm: "このサウナ施設を削除します。この操作は取り消せません。" }, class: "btn btn-danger"%>
                </div>
            </div>
            
        </div>
    </div>
</div>