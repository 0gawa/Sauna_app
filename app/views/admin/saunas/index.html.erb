<%=render "layouts/admin_header"%>

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <div class="row mt-5">
                <h1>サウナ施設一覧</h1>
            </div>

            <div class="row mt-5">
                <div class="col-md-10 mt-3">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>#</th>   <th>サウナ施設</th> <th>住所</th>
                        </tr>
                        <% @saunas.each do |sauna|%>
                            <tr onclick='window.location="<%= admin_sauna_path(sauna.id)%>"' role="link">
                                <td><%=sauna.id%></td>
                                <td><%=sauna.name%></td>
                                <td><%=sauna.address%></td>
                            </tr>
                        <%end%>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>