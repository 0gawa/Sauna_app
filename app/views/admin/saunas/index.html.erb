<%=render "layouts/admin_header"%>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-11">
            <div class="row mt-5">
                <h1 class="text-center">サウナ施設一覧</h1>
            </div>

            <div class="row mt-5">
                <div class="col-12 mt-3">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>#</th>   <th>サウナ施設</th> <th>住所</th> <th></th>
                        </tr>
                        <% @saunas.each do |sauna|%>
                            <tr onclick='window.location="<%= admin_sauna_path(sauna.id)%>"' role="link">
                                <td><%=sauna.id%></td>
                                <td><%=sauna.name%></td>
                                <td><%=sauna.address%></td>
                                <td class="text-center"><%=link_to "削除ボタン！", admin_sauna_path(sauna.id), data: {"turbo-method": :delete, "turbo_confirm": "このサウナ施設を削除します。この操作は取り消せません。"}, class: "btn btn-danger"%></td>
                            </tr>
                        <%end%>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>